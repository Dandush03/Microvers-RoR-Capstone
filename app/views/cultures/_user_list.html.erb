<% users.each do |user| %>
  <div class="followers">
    <div class="profile-img">
      <figure>
        <%= link_to culture_path(user) do %>
          <%= image_tag(url_for(user.profile_img)) if user.profile_img.attached? %>
          <%= content_tag :div unless user.profile_img.attached? %>
        <% end %>
      </figure>
    </div>
    <div class="profile-info">
      <p><%=user.full_name%></p>
      <span><%="@#{user.username}"%></span>
    </div>
    <% unless current_user == user %>
      <div class=profile-btns>
        <% if followed?(user.id) %>
          <%= button_to send('followings_path', :id => user.id), method: 'post', :data => { :disable_with => "" } do %>
            <i class="fas fa-plus"></i>
          <% end %>
        <% else %>
          <%= button_to send('following_path',:friend => user.id), method: 'delete', :data => { :disable_with => "" } do %>
            <i class="fas fa-minus"></i>
          <% end %>
        <% end %>
      </div>

    <% end %>
  </div>
<% end %>
